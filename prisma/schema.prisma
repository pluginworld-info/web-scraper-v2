generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?
  image       String?
  brand       String?
  category    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tags        String[]
  listings    Listing[]
  reviews     Review[]

  // Analytics Relations
  views       ProductView[]
  wishlisted  WishlistItem[]

  @@index([title])
  @@index([brand])
  @@index([category])
}

model Listing {
  id           String         @id @default(cuid())
  url          String         @unique
  title        String
  price        Float
  currency     String         @default("USD")
  inStock      Boolean        @default(true)
  productId    String?
  retailerId   String
  lastScraped  DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  originalPrice Float?
  product      Product?       @relation(fields: [productId], references: [id])
  retailer     Retailer       @relation(fields: [retailerId], references: [id])
  history      PriceHistory[]
}

model Retailer {
  id          String       @id @default(cuid())
  name        String       @unique
  domain      String
  isEnabled   Boolean      @default(true)
  role        RetailerRole @default(PRICE_CHECKER)
  logo        String?
  scrapeDelay Int          @default(5000)
  listings    Listing[]
}

model PriceHistory {
  id        String   @id @default(cuid())
  price     Float
  date      DateTime @default(now())
  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@index([listingId, date])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  avatar    String?
  createdAt DateTime @default(now())
  reviews   Review[]

  // Analytics Relations
  searches  SearchLog[]
  views     ProductView[]
  wishlist  WishlistItem[]
}

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String?
  userId    String
  productId String
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model UserEvent {
  id        String   @id @default(cuid())
  sessionId String
  userId    String?
  action    String
  targetId  String?
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([sessionId])
}

// --- NEW ANALYTICS MODELS ---

model SearchLog {
  id           String   @id @default(cuid())
  query        String
  userId       String?
  guestId      String?  // From Cookie
  resultsCount Int?
  createdAt    DateTime @default(now())

  user         User?    @relation(fields: [userId], references: [id])
  
  @@index([createdAt])
}

model ProductView {
  id        String   @id @default(cuid())
  productId String
  userId    String?
  guestId   String?
  source    String?  // e.g., "search_result", "homepage"
  duration  Int?     // Time spent in seconds
  createdAt DateTime @default(now())

  product   Product  @relation(fields: [productId], references: [id])
  user      User?    @relation(fields: [userId], references: [id])

  @@index([productId])
  @@index([guestId])
}

model WishlistItem {
  id        String   @id @default(cuid())
  productId String
  userId    String?
  guestId   String?
  createdAt DateTime @default(now())

  product   Product  @relation(fields: [productId], references: [id])
  user      User?    @relation(fields: [userId], references: [id])

  // Ensures a registered user can't wishlist the same item twice
  @@unique([userId, productId])
}

enum RetailerRole {
  MASTER
  PRICE_CHECKER
}