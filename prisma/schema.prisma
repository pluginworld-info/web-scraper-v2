generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  
  // Core Identity (Managed by MASTER retailers)
  title       String
  slug        String   @unique
  description String?  // Only MASTER feeds can overwrite this
  image       String?  // Only MASTER feeds can overwrite this
  brand       String?  @default("Unknown")
  category    String?  @default("Plugin")
  
  // âš¡ SMART PRICE CACHE (New Fields for AI Section)
  // Auto-calculated during ingestion. Allows instant sorting/filtering.
  minPrice         Float    @default(0)   // Lowest "Sale Price" currently available
  maxRegularPrice  Float    @default(0)   // Highest "Original Price" (Anchor Price)
  maxDiscount      Int      @default(0)   // Highest % off available (e.g. 85)

  tags        String[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  listings    Listing[]
  reviews     Review[]

  // Analytics Relations
  views       ProductView[]
  wishlisted  WishlistItem[]

  @@index([title])
  @@index([brand])
  @@index([category])
}

model Listing {
  id            String   @id @default(cuid())
  
  // The "Visit Site" destination
  url           String   @unique
  title         String   // The specific title on THIS site
  
  // The Raw Numbers for the Comparison Table
  price         Float
  originalPrice Float?
  currency      String   @default("USD")
  
  inStock       Boolean  @default(true)
  lastScraped   DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  product       Product? @relation(fields: [productId], references: [id])
  productId     String?
  
  retailer      Retailer @relation(fields: [retailerId], references: [id])
  retailerId    String
  
  history       PriceHistory[]
}

model Retailer {
  id          String       @id @default(cuid())
  name        String       @unique
  domain      String
  logo        String?
  
  // The Guardian Field
  role        RetailerRole @default(SPOKE) 
  isEnabled   Boolean      @default(true)
  scrapeDelay Int          @default(5000)
  
  listings    Listing[]
}

model PriceHistory {
  id        String   @id @default(cuid())
  price     Float
  date      DateTime @default(now())
  
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  listingId String

  @@index([listingId, date])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  avatar    String?
  createdAt DateTime @default(now())
  
  reviews   Review[]

  // Analytics Relations
  searches  SearchLog[]
  views     ProductView[]
  wishlist  WishlistItem[]
}

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String?
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  
  createdAt DateTime @default(now())
}

model UserEvent {
  id        String   @id @default(cuid())
  sessionId String
  userId    String?
  action    String
  targetId  String?
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([sessionId])
}

// --- ANALYTICS MODELS ---

model SearchLog {
  id           String   @id @default(cuid())
  query        String
  userId       String?
  guestId      String?
  resultsCount Int?
  createdAt    DateTime @default(now())

  user         User?    @relation(fields: [userId], references: [id])
   
  @@index([createdAt])
}

model ProductView {
  id        String   @id @default(cuid())
  productId String
  userId    String?
  guestId   String?
  source    String?
  duration  Int?
  createdAt DateTime @default(now())

  product   Product  @relation(fields: [productId], references: [id])
  user      User?    @relation(fields: [userId], references: [id])

  @@index([productId])
  @@index([guestId])
}

model WishlistItem {
  id        String   @id @default(cuid())
  productId String
  userId    String?
  guestId   String?
  createdAt DateTime @default(now())

  product   Product  @relation(fields: [productId], references: [id])
  user      User?    @relation(fields: [userId], references: [id])

  // Ensures a user can't wishlist the same item twice
  @@unique([userId, productId])
}

enum RetailerRole {
  MASTER // Authority: Can update Title, Image, Description
  SPOKE  // Contributor: Can ONLY update Price/URL
}