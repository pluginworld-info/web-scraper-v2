generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- CORE PRODUCT DATA ---

model Product {
  id          String   @id @default(cuid())
  
  // Core Identity (Managed by MASTER retailers)
  title       String
  slug        String   @unique
  description String?  // Only MASTER feeds can overwrite this
  image       String?  // Only MASTER feeds can overwrite this
  brand       String?  @default("Unknown")
  category    String?  @default("Plugin")
  
  // âš¡ SMART PRICE CACHE
  minPrice        Float    @default(0)
  maxRegularPrice Float    @default(0)
  maxDiscount     Int      @default(0)

  tags        String[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  listings    Listing[]
  reviews     Review[]

  // Analytics & Alerts
  views       ProductView[]
  wishlisted  WishlistItem[]
  
  // ADDED: Link to Price Alerts (Required for relation)
  priceAlerts PriceAlert[] 

  @@index([title])
  @@index([brand])
  @@index([category])
}

model Listing {
  id            String   @id @default(cuid())
  
  url           String   @unique
  title         String   
  
  price         Float
  originalPrice Float?
  currency      String   @default("USD")
  
  inStock       Boolean  @default(true)
  lastScraped   DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  product       Product? @relation(fields: [productId], references: [id])
  productId     String?
  
  retailer      Retailer @relation(fields: [retailerId], references: [id])
  retailerId    String
  
  history       PriceHistory[]
}

model Retailer {
  id          String       @id @default(cuid())
  name        String       @unique
  domain      String
  logo        String?
  
  // The Guardian Field
  role        RetailerRole @default(SPOKE) 
  isEnabled   Boolean      @default(true)
  scrapeDelay Int          @default(5000)
  
  listings    Listing[]
  feeds       Feed[]       
}

// Stores the URLs we need to monitor
model Feed {
  id           String       @id @default(cuid())
  name         String       // e.g. "Main JSON Feed"
  url          String       // The dynamic URL to monitor
  type         FeedType     @default(JSON)
  
  status       FeedStatus   @default(IDLE)
  lastSyncedAt DateTime?
  errorMessage String?
  
  retailer     Retailer     @relation(fields: [retailerId], references: [id], onDelete: Cascade)
  retailerId   String

  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

model PriceHistory {
  id        String   @id @default(cuid())
  price     Float
  date      DateTime @default(now())
  
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  listingId String

  @@index([listingId, date])
}

// --- USER & SOCIAL ---

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  avatar    String?
  createdAt DateTime @default(now())
  
  reviews   Review[]
  searches  SearchLog[]
  views     ProductView[]
  wishlist  WishlistItem[]
}

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String?
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  
  createdAt DateTime @default(now())
}

model UserEvent {
  id        String   @id @default(cuid())
  sessionId String
  userId    String?
  action    String
  targetId  String?
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([sessionId])
}

// --- ANALYTICS & ALERTS MODELS ---

// ADDED: This was missing in your file!
model PriceAlert {
  id           String   @id @default(cuid())
  email        String
  targetPrice  Float
  
  product      Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId    String
  
  isTriggered  Boolean  @default(false)
  createdAt    DateTime @default(now())
  triggeredAt  DateTime?

  @@index([email])
  @@index([productId])
}

model SearchLog {
  id           String   @id @default(cuid())
  query        String
  userId       String?
  guestId      String?
  resultsCount Int?
  createdAt    DateTime @default(now())

  user         User?    @relation(fields: [userId], references: [id])
   
  @@index([createdAt])
}

model ProductView {
  id        String   @id @default(cuid())
  productId String
  userId    String?
  guestId   String?
  source    String?
  duration  Int?
  createdAt DateTime @default(now())

  product   Product  @relation(fields: [productId], references: [id])
  user      User?    @relation(fields: [userId], references: [id])

  @@index([productId])
  @@index([guestId])
}

model WishlistItem {
  id        String   @id @default(cuid())
  productId String
  userId    String?
  guestId   String?
  createdAt DateTime @default(now())

  product   Product  @relation(fields: [productId], references: [id])
  user      User?    @relation(fields: [userId], references: [id])

  @@unique([userId, productId])
}

// --- ENUMS ---

enum RetailerRole {
  MASTER // Authority: Can update Title, Image, Description
  SPOKE  // Contributor: Can ONLY update Price/URL
}

enum FeedType {
  JSON
  CSV
  XML
}

enum FeedStatus {
  IDLE
  SYNCING
  SUCCESS
  ERROR
}